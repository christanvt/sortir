{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Participant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Motpasse</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Administrateur</th>
                <th>Actif</th>
                <th>Pseudo</th>
                <th>ImagePath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.motpasse }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.imagePath }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}">Create new</a>
{% endblock %}
